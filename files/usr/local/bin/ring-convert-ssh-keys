#!/usr/bin/env bash
if [ $# -lt 2 ]; then
    echo "No arguments were given"
    echo "Usage: `basename $0` authorized_keys_file username"
    exit 1
fi

RING_USER=$2

echo -e "\t@authorized_keys { \"$2\":"
echo -e "\t\tsshkeys => ["
cat $1 | while read line; 
do
    echo -e "\t\t\t\"${line}\","
done
echo -e "\t\t],"
echo -e "\t}"

