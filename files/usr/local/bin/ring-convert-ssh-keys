#"FNR ":\n\t\tuser => \"UNIEKESTRING\",\n\t\ttype => \"" $1 "\",\n\t\tkey => \
#\"" $2 "\",\n\t\tname => \"" $3 "_" FNR "\",\n\t\toptions => [],\n\t}      " }' | \
#sed "s/UNIEKESTRING/$RING_USER/g"


