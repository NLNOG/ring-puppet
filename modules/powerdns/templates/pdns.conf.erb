# File managed by Puppet

allow-recursion=127.0.0.1
config-dir=/etc/powerdns
daemon=yes
disable-axfr=yes
guardian=yes
launch=gsqlite3
sqlite3-database=/var/spool/powerdns/pdns.sqlite
sqlite3-dnssec
lazy-recursion=yes
local-address=<%= ipaddress %>
local-ipv6=<%= ipaddress6 %>
local-port=53
module-dir=/usr/lib/powerdns
setgid=pdns
setuid=pdns
socket-dir=/var/run
version-string=powerdns
