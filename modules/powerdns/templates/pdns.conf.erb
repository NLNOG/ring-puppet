# File managed by Puppet

allow-recursion=127.0.0.1
config-dir=/etc/powerdns
daemon=yes
disable-axfr=yes
guardian=yes
launch=gmysql
gmysql-host=localhost
gmysql-dbname=pdns
gmysql-user=pdns
gmysql-password=<%= scope.function_trocla("pdns_${fqdn}",'plain') %>
gmysql-dnssec=yes
lazy-recursion=yes
local-address=<%= ipaddress %>
local-ipv6=<%= ipaddress6 %>
local-port=53
module-dir=/usr/lib/powerdns
setgid=pdns
setuid=pdns
socket-dir=/var/run
version-string=powerdns
